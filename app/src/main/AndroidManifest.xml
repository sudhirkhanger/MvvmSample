<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sudhirkhanger.networksample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NetworkSampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.fourth.FourthActivity"
            android:parentActivityName=".ui.third.ThirdActivity" />
        <activity
            android:name=".ui.third.ThirdActivity"
            android:parentActivityName=".ui.second.SecondActivity" />
        <activity
            android:name=".ui.second.SecondActivity"
            android:parentActivityName=".ui.first.FirstActivity" />
        <activity android:name=".ui.first.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>